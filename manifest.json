{ 
  "manifest_version": 3, 
  "name": "DonCookie", 
  "author": "NikNitro!",
  "version": "1.0",   "description": "Those are my cookies and I'm not selling them.",
  "permissions": ["scripting"], 
  "action": {}, 
  "content_scripts": [ 
    { 
      "matches": [
        "*://elpais.com//*",
        "*://www.elconfidencial.com/*",
        "*://www.marca.com/*",
        "*://www.diariosur.es/*",
        "*://www.elmundo.es/*",
        "*://www.elespanol.com/*",
        "*://www.epe.es/*",
        "*://www.elperiodico.com/*",
        "*://www.lavanguardia.com/*",
        "*://www.abc.es/*",
        "*://www.publico.es/*"], 
      "js": ["content.js"], 
      "world":"MAIN",
      "run_at": "document_idle" 
    } 
  ], 
  "host_permissions": [ 
    "*://elpais.com//*", 
    "*://www.elconfidencial.com/*",
    "*://www.marca.com/*",
    "*://www.diariosur.es/*",
    "*://www.elmundo.es/*",
    "*://www.elespanol.com/*",
    "*://www.epe.es/*",
    "*://www.elperiodico.com/*",
    "*://www.lavanguardia.com/*",
    "*://www.abc.es/*",
    "*://www.publico.es/*"
  ],
  "icons": {
    "48": "static/icon48.png",
    "128": "static/icon128.png"
  }
}