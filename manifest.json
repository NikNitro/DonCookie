{ 
  "manifest_version": 3, 
  "name": "DonCookie", 
  "author": "NikNitro!",
  "version": "1.0",   "description": "Those are my cookies and I'm not selling them.",
  "permissions": ["scripting"], 
  "action": {}, 
  "content_scripts": [ 
    { 
      "matches": ["*://elpais.com//*", "*://www.elconfidencial.com/*", "*://www.marca.com/*", "*://www.diariosur.es/*"], 
      "js": ["content.js"], 
      "world":"MAIN",
      "run_at": "document_idle" 
    } 
  ], 
  "host_permissions": [ 
    "*://elpais.com//*", 
    "*://www.elconfidencial.com/*",
    "*://www.marca.com/*",
    "*://www.diariosur.es/*"

  ],
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
